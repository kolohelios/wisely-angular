header.header(ng-controller='NavCtrl')
  .navbar.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Wisely
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right(ng-show='activeUser')
          li: a(ui-sref='home'): i.fa.fa-home &nbsp; Home
          li: a(ui-sref='about'): i.fa.fa-info &nbsp; About
          li: a(ui-sref='faq'): i.fa.fa-question &nbsp; FAQ
          li: a(ui-sref='contact'): i.fa.fa-phone &nbsp; Contact
          li: a(ui-sref='userAdmin' ng-if='activeUser.role === 255'): i.fa.fa-users &nbsp; Admin
          li: button.btn.btn-danger.btn-md(ng-click='logout()'): i.fa.fa-sign-out &nbsp; Log Out
        ul.nav.navbar-nav.navbar-right(ng-hide='activeUser')
          li: a(ui-sref='home'): i.fa.fa-home &nbsp; Home
          li: a(ui-sref='about'): i.fa.fa-info &nbsp; About
          li: a(ui-sref='faq'): i.fa.fa-question &nbsp; FAQ
          li: a(ui-sref='contact'): i.fa.fa-phone &nbsp; Contact
          li: a(ui-sref='login'): i.fa.fa-key &nbsp; Login
